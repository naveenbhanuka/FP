<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--    Text styles-->

    <style name="colorBlackShadeMediumTextStyle">
        <item name="android:textColor">@color/colorBlackShade</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="colorGrayNormalTextStyle">
        <item name="android:textColor">@color/colorBlackShade</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="colorDarkBlueNormalTextStyle">
        <item name="android:textColor">@color/colorDarkBlue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="colorLightBlackNormalTextStyle">
        <item name="android:textColor">@color/colorLightBlack</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="colorHintNormalTextStyle">
        <item name="android:textColor">@color/colorHint</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="colorHintNormalTextStyle.Size12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="colorDarkBlueNormalTextStyle.Size14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="colorLightBlackNormalTextStyle.Size12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="colorLightBlackNormalTextStyle.Size14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="colorBlackShadeMediumTextStyle.Size12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="colorBlackShadeMediumTextStyle.Size14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="colorGrayNormalTextStyle.Size14">
        <item name="android:textSize">14sp</item>
    </style>

    <!--    Navigation bar text styles-->

    <style name="navBarTextAppearanceActive" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#1D1D1D</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="navBarTextAppearanceInactive" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#00000000</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">9sp</item>
    </style>

    <!--    Default edit text title style -->

    <style name="primaryEditTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:background">@drawable/bg_rounded_border_light_edit_text</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="editTextSearchStyle">
        <item name="android:textColor">@color/colorBlackShade</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableLeft">@drawable/ic_search_normal</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/colorHint</item>
    </style>

    <!--Button Text Styles-->

    <!--    Basic Button Style-->
    <style name="basicButtonStyle">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <!--    Rounded  Background Border of gradient Button Style-->
    <style name="roundedBorderGradientButtonStyle" parent="basicButtonStyle">
        <item name="android:background">@drawable/bg_gradient_btn</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>